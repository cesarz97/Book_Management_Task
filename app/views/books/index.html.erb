<div class="container mt-5">
  <h1>Books</h1>

  <% if flash[:errors] %>
    <% flash.each do |name, message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Published Date</th>
          <th scope="col">Genre</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.author %></td>
            <td><%= book.published_date %></td>
            <td><%= book.genre %></td>
            <td>
              <%= link_to "Show", book_path(book), class: "btn btn-success btn-sm" %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary btn-sm" %>
              <%= button_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-end">
    <%= link_to "Add New Book", new_book_path, class: "btn btn-warning" %>
  </div>
</div>
